{
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "typescript.suggest.paths": true,
  "files.associations": {
    "**/app/**/*.css": "tailwindcss"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.turbo": true,
    "**/.astro": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/build": true,
    "**/.cache": true,
    "website/data": true
  }
}
